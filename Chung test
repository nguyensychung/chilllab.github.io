    <!-- audio: nếu trình duyệt chặn autoplay thì người dùng bấm play -->
    <div class="audio-control" aria-hidden="false">
      <button id="audioToggle" class="audio-toggle" type="button">Tắt / Bật âm biển</button>
    </div>

    <audio id="oceanSound" loop preload="auto">
      <source src="https://cdn.pixabay.com/download/audio/2022/03/15/audio_7ef16f96e1.mp3?filename=waves-on-beach-ambient-110734.mp3" type="audio/mpeg">
      <!-- fallback text -->
      Trình duyệt của bạn không hỗ trợ audio.
    </audio>

  </div>

  <script>
    const audio = document.getElementById('oceanSound');
    const btn = document.getElementById('audioToggle');

    // Cố gắng tự phát (nhiều trình duyệt mobile sẽ chặn, nhưng thử)
    function tryAutoplay(){
      audio.volume = 0.45;
      audio.play().then(()=> {
        btn.textContent = "Tắt âm biển";
      }).catch(()=> {
        // bị chặn: hiện trạng là tắt, chờ người bấm
        btn.textContent = "Bật âm biển";
      });
    }
    tryAutoplay();

    btn.addEventListener('click', ()=> {
      if (audio.paused){
        audio.play();
        btn.textContent = "Tắt âm biển";
      } else {
        audio.pause();
        btn.textContent = "Bật âm biển";
      }
    });
  </script>
